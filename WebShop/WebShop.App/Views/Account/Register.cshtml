@model WebShop.Services.Models.RegisterViewModel;

<h1>@ViewBag.Title</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="@Model.UserName"></label>
                <input asp-for="@Model.UserName" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="@Model.FirstName"></label>
                <input asp-for="@Model.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="@Model.LastName"></label>
                <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="@Model.RetypePassword"></label>
                <input asp-for="@Model.RetypePassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="@Model.RetypePassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
